<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="#EFE6E6">

    <ImageView
        android:id="@+id/image_repo_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/ic_repo_icon"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="8dp"
        android:text="MMV App"
        android:textColor="#2D8DB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_repo_icon" />

    <TextView
        android:id="@+id/url_tv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="8dp"
        android:text="MMV App"
        android:textColor="#2D8DB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_item_name"/>

    <TextView
        android:id="@+id/created_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="8dp"
        android:text="MMV App"
        android:textColor="#2D8DB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>